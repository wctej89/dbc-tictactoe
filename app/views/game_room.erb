<script src="/js/game_room.js"></script>
<script src="/js/game.js"></script>


<p>You're playing game number <%= @game.id %>.</p>

<% if current_user.id != @game.challenger_id %>
  <p>Your opponent is <span id="opponent_name">no one, currently</span>.</p>
<% end %>

<div class="board">
<% if @game.current_board == nil %>
  <%= erb :_board  %>
<% else %>
  <%= @game.current_board %>
<% end %>
</div>